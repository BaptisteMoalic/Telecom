<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controller.ItineraireActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Départ :"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:textSize="16dp"
        android:textColor="@color/purple_500"/>

    <EditText
        android:id="@+id/activity_itineraire_depart_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="Départ"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arrivée :"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:textSize="16dp"
        android:textColor="@color/purple_500"/>

    <EditText
        android:id="@+id/activity_itineraire_arrivee_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="Arrivée"/>

    <Button
        android:id="@+id/activity_itineraire_transport_btn"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:layout_gravity="center_horizontal"
        android:text="Moyen de transport"/>

    <Button
        android:id="@+id/activity_itineraire_escales_btn"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:layout_gravity="center_horizontal"
        android:text="Escales"/>

    <Button
        android:id="@+id/activity_itineraire_parametres_btn"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:layout_gravity="center_horizontal"
        android:text="Paramètres route"/>



</LinearLayout>